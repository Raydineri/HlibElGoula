{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<style>
  body {
    background-image: url('{{ asset('Media/login.jpg') }}');
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>

<nav class="navbar navbar-expand-lg bg-danger" data-bs-theme="dark" ; z-index: 1000;">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">CyberTech</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="/">Home
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
       
      </ul>
      <form class="d-flex">
        <button style="color: white;"><a href="{{ path('app_logout') }}" style="text-decoration: none; color: inherit;">Logout</a></button>
      </form>
    </div>
  </div>
</nav>

<p><center><h1 class="text-white">Your cart</h1></center></p>

<hr>
<div class="container">
{# | retourne la longueur d'un tableau #}
  {% if items|length %}
 <div class="container">
    <div class="row">
        <div class="col-md-12">       
<br>
<div class="table-responsive">
<table class="table table-striped table-bordered">
<thead class="table-dark">
<tr>
<th>ID</th>
<th>Name</th>
 <th>Quantity</th>
 <th>Price</th>
  </tr>
</thead>
<tbody>
 {% for item in items %}
<tr>
<td>{{ item.id }}</td>
 <td>{{ item.nom }}</td>
<td>{{ item.quantity }}</td>
<td>{{ item.prix }}</td>
</tr>
{% endfor %}
</tbody>
<tfoot>
<tr>
 <td colspan="3" class="text-end"><strong>Total:</strong></td>
 <td>{{ total }}</td>
    </tr>
</tfoot>

</table>
 </div>
        </div>
    </div>
</div>

  {% else %}
   <div style="color:white; text-align:center; font-size:60px;">
    <p>Empty Cart !</p>
</div>

  {% endif %}
</div>

{% endblock %}